<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="8dp">

        <Button
            android:id="@+id/btnWaves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_selector"
            android:drawableTop="@drawable/tsunami"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Waves"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnRain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_selector"
            android:drawableTop="@drawable/raing"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Rain"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnForest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_selector"
            android:drawableTop="@drawable/forest"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Forest"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnStream"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_selector"
            android:drawableTop="@drawable/lake"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Stream"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnThunder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_selector"
            android:drawableTop="@drawable/thunderstorm"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Thunderstorm"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnWind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_selector"
            android:drawableTop="@drawable/wind"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Wind"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="16sp" />

    </GridLayout>

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_selector"
        android:drawableTop="@drawable/stop"
        android:paddingTop="6dp"
        android:paddingBottom="16dp"
        android:text="Stop"
        android:textColor="#333333"
        android:textSize="16sp"
        app:iconPadding="0dp" />

</LinearLayout>
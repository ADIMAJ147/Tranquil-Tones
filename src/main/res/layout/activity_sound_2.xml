<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="8dp">

        <Button
            android:id="@+id/btnBird"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_selector"
            android:drawableTop="@drawable/bird"
            android:drawablePadding="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Bird"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnCat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_selector"
            android:drawableTop="@drawable/cat"
            android:drawablePadding="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Cat"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnFrog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_selector"
            android:drawableTop="@drawable/frog"
            android:drawablePadding="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Frog"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnInsect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_selector"
            android:drawableTop="@drawable/insect"
            android:drawablePadding="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Insect"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnOwl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_selector"
            android:drawableTop="@drawable/owl"
            android:drawablePadding="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Owl"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnWolf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_selector"
            android:drawableTop="@drawable/wolf"
            android:drawablePadding="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Wolf"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="16sp" />

    </GridLayout>

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_selector"
        android:drawableTop="@drawable/stop"
        android:drawablePadding="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Stop"
        android:textColor="#333333"
        android:textSize="16sp" />

</LinearLayout>
